.row-fluid
  .row-fluid
    .span12
      %span.search_base
        = form_tag(trees_messages_path, method: :get, class: 'form-search') do
          .input-append
            = text_field_tag :words, params['words'], class: 'search-query'
            = submit_tag(t('buttons.search'), name: nil, class: 'btn')
  .row-fluid
    .span12.pager_base
      = paginate messages
