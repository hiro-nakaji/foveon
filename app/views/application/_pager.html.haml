.row-fluid
  %span.pager_base
    = link_to('', trees_messages_path, class: 'icon-home')
    = link_to(t('buttons.new'), new_message_path, class: 'header')
    = paginate messages, :window => 2, :outer_window => 2
  %span.search_base
    = form_tag(trees_messages_path, method: :get, class: 'form-search') do
      .input-append
        = text_field_tag :words, params['words'], class: 'search-query'
        = submit_tag(t('buttons.search'), name: nil, class: 'btn')
