.row-fluid.thread
  .row-fluid.thread_header
    .row-fluid
      .span5.entry_headline
        = entry.title
        %a(name="#{entry.id}")
      .span2.entry_headline
        = entry.author
        - if entry.homepage.present?
          = link_to('', entry.url, class: 'icon-home', target: '_blank')
        - if entry.mail.present?
          = mail_to(entry.mail, '', class: 'icon-envelope')
      .span2
        = I18n.localize(entry.created_at, :format => :short)
      .span3.button_group
        = button_to(t('buttons.respond'), respond_message_path(entry), method: 'get', class: 'btn btn-mini btn-link')
        = button_to(t('buttons.edit'), edit_message_path(entry), method: 'get', class: 'btn btn-mini btn-link')
        = button_to(t('buttons.delete'), message_path(entry), method: 'get', class: 'btn btn-mini btn-link')
  .row-fluid
    .span12.thread_body
      = raw Rinku.auto_link(simple_format(entry.content), mode=:all, 'target="_blank"')
  .row-fluid.thread_photo
    - entry.photos.each do |photo|
      = link_to(image_tag(photo.photo_data.thumb.to_s, class: 'img-polaroid', alt: photo.title), photo_path(photo), title: photo.title)
